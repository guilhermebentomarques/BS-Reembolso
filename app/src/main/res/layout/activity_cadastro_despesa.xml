<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context=".Activity.CadastroDespesa">

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:textColor="@color/cor_logotipo"
            android:textStyle="bold"
            android:id="@+id/txtTipoDespesa"
            android:textAlignment="center"
            android:text="Tipo Despesa" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/imgTipoDespesa"
            android:src="@drawable/btn_aviao_azul"
            android:layout_gravity="center_horizontal"
            android:padding="10dp"/>

        <TextView
            android:layout_height="wrap_content"
            style="@style/Texto_Padrao_Bold"
            android:layout_width="match_parent"
            android:text="Adiantamento" />

        <RelativeLayout
            android:id="@+id/relativeLayout3"
            android:layout_width="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_height="wrap_content"
            android:layout_above="@+id/llRodape"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true">

            <LinearLayout
                android:id="@+id/LinearLayout5"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:gravity="center_vertical"
                android:orientation="vertical" >

                <LinearLayout
                    android:id="@+id/LinearLayout51"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_height="wrap_content"
                        style="@style/Texto_Padrao"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:text="Data: " />

                    <TextView
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        style="@style/Texto_Padrao"
                        android:text="Valor: " />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/LinearLayout4"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:orientation="horizontal" >

                    <EditText
                        android:id="@+id/edtDataAdiantamento"
                        android:enabled="false"
                        style="@style/padrao_edit"
                        android:layout_weight="2"
                        android:layout_width="0dp"
                        android:textAlignment="center" />

                    <ImageView
                        android:id="@+id/btnDataAdiantamento"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="30dp"
                        android:src="@drawable/btn_data_32"
                        android:onClick="setDataAdiantamento"
                        android:text="Data" />

                    <EditText
                        android:id="@+id/edtValorAdiantamento"
                        android:inputType="number"
                        style="@style/padrao_edit"
                        android:textAlignment="center"
                        android:layout_weight="2"
                        android:layout_width="0dp" />

                    <TextView
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:layout_width="0dp"
                        android:text="" />

                </LinearLayout>


            </LinearLayout>

        </RelativeLayout>

        <TextView
            android:layout_height="wrap_content"
            style="@style/Texto_Padrao_Bold"
            android:layout_width="match_parent"
            android:text="Viagem" />

        <RelativeLayout
            android:id="@+id/relativeLayout2"
            android:layout_width="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_height="wrap_content"
            android:layout_above="@+id/llRodape"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true">

            <LinearLayout
                android:id="@+id/LinearLayout13"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:gravity="center_vertical"
                android:orientation="vertical" >

                <LinearLayout
                    android:id="@+id/LinearLayout2"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                        <TextView
                            android:layout_height="wrap_content"
                            style="@style/Texto_Padrao"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:text="Início: " />

                        <TextView
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            style="@style/Texto_Padrao"
                            android:text="Fim: " />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/LinearLayout3"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:orientation="horizontal" >

                    <EditText
                        android:id="@+id/edtDataInicio"
                        android:enabled="false"
                        style="@style/padrao_edit"
                        android:layout_weight="2"
                        android:layout_width="0dp"
                        android:textAlignment="center" />

                    <ImageView
                        android:id="@+id/btnDataFim"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="30dp"
                        android:onClick="setDataInicio"
                        android:src="@drawable/btn_data_32"
                        android:text="Data" />

                    <EditText
                        android:id="@+id/edtDataFim"
                        android:enabled="false"
                        style="@style/padrao_edit"
                        android:textAlignment="center"
                        android:layout_weight="2"
                        android:layout_width="0dp" />

                    <ImageView
                        android:id="@+id/btnDataInicio"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="30dp"
                        android:onClick="setDataFim"
                        android:src="@drawable/btn_data_32"
                        android:text="Data" />

                </LinearLayout>


            </LinearLayout>

        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            style="@style/Texto_Padrao"
            android:text="Cliente: " />

        <Spinner
            android:id="@+id/spnListaClientes"
            android:layout_width="match_parent"
            style="@style/padrao_spinner">
        </Spinner>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            style="@style/Texto_Padrao"
            android:text="Descrição: " />

        <EditText
            android:id="@+id/edtDescricao"
            android:inputType="textMultiLine"
            android:lines="3"
            android:layout_height="60dp"
            android:minLines="1"
            android:gravity="top|left"
            android:maxLines="3"
            style="@style/padrao_edit"
            android:layout_width="fill_parent"
            android:scrollbars="vertical" />

        <Button
            android:id="@+id/cd_btnGravar"
            android:layout_width="200dp"
            android:layout_marginTop="10dp"
            android:layout_gravity="center_horizontal"
            android:layout_height="wrap_content"
            android:background="@drawable/shape"
            android:text="Cadastrar"
            android:textColor="@color/branco"
            android:onClick="prcGravarReembolso"/>


    </LinearLayout>

</ScrollView>