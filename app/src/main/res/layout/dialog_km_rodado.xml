<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:orientation="vertical">

    <Switch
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Calcular Combustível  "
        android:checked="false"
        android:id="@+id/swtCalculaCombustivel"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginRight="30dp"
        style="@style/Texto_Padrao"
        android:id="@+id/txtTipoDoKM"
        android:text="Valor Km Rodado: " />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            style="@style/Texto_Padrao"
            android:text="Distância em KM: " />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/edtKmRodadoValor"
            android:layout_width="120dp"
            android:layout_marginRight="25dp"
            android:background="@drawable/edittext_padrao"
            android:layout_height="30dp"
            android:inputType="numberDecimal" />

        <EditText
            android:id="@+id/edtKmRodadoQtdade"
            android:layout_width="130dp"
            android:background="@drawable/edittext_padrao"
            android:layout_height="30dp"
            android:inputType="numberDecimal"/>

    </LinearLayout>

</LinearLayout>